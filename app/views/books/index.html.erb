<div class="container">
	<% if @book.errors.any? %>
  		<div class="error_explanation">
  			<h3><%= @book.errors.count %> errors prohibited this book from being saved:
  			</h3>
   			<ul>
     			<% @book.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      			<% end %>
   		 	</ul>
  		</div>
	<% end %>
	<div class="row">
		<div class="col-xs-3">

			<h2>User info</h2>
			<%= render 'users/profile', user: current_user %>
			<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

			<h2>New book</h2>
			<%= render 'books/newform', book: @book %>

		</div>

		<div class="col-xs-9">
			<h2>Books index</h2>
			<%= render 'index', books: @books %>

		</div>
	</div>
</div>